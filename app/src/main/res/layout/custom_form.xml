<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_spacing">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ca.tirtech.stash.forms.Subform
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/form_root_subform"/>
        <com.google.android.material.button.MaterialButton
                android:text="@string/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel_form"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_submit_form"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/form_root_subform"
                android:layout_marginEnd="@dimen/item_spacing"/>
        <com.google.android.material.button.MaterialButton
                android:text="@string/save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_submit_form"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_cancel_form"
                app:layout_constraintTop_toBottomOf="@id/form_root_subform"
                android:layout_marginStart="@dimen/item_spacing"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
