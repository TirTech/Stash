<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="navController" type="androidx.navigation.NavController"/>
        <variable name="fragment" type="ca.tirtech.stash.fragments.NewItemFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:paddingVertical="@dimen/activity_vertical_margin"
                                                       android:paddingHorizontal="@dimen/activity_horizontal_margin">
        <TextView
                android:text="@string/add_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintBottom_toTopOf="@+id/btn_apply_new_item" android:id="@+id/constraintLayout2" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent">

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edittxt_item_title" android:hint="@string/item_title" app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@id/edittxt_item_description" android:layout_marginBottom="@dimen/item_spacing" app:layout_constraintVertical_chainStyle="packed"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:ems="10"
                    android:id="@+id/edittxt_item_description" app:layout_constraintTop_toBottomOf="@+id/edittxt_item_title" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="@dimen/item_spacing" android:hint="@string/item_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
                android:text="@string/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/btn_cancel_new_item" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/btn_apply_new_item" app:layout_constraintStart_toStartOf="parent" android:onClick="@{() -> navController.popBackStack()}"/>
        <Button
                android:text="@string/save"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/btn_apply_new_item" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_cancel_new_item" android:onClick="@{fragment::handleSaveClicked}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
